<div>
	<h1>
		Edit Subject
	</h1>

		<%= link_to('Back to home',subjects_path) %>
	<br>
	<%= form_for(@subject,:url=>subject_path(@subject),:method=>'patch'  ) do |f| %>
		<table>
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>
			<tr>
				<th>Position</th>
				<td><%= f.text_field(:position) %></td>
			</tr>
			<tr>
				<th>Visible</th>
				<td>
					True : <%= f.radio_button(:visible,value = true) %>
					False : <%= f.radio_button(:visible,value =false) %>	
				</td>
			</tr>
			<tr>
				<td colspan=2 ><%= f.submit(:update	) %></td>	
			</tr>
		</table>
	<% end %>
</div>