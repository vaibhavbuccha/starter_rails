
<%= link_to('Back to home' , {:controller => 'subject'}) %>

<h4>Create New Subject<h4>

<div>
    
 

    <%= form_for(@subject, :url => {:controller => 'subjects'} , :method => 'post' ) do |f| %>

        <table>
            <tr>
                <th>Name</th>
                <td>
                    <%= f.text_field(:name) %>
                </td>
            </tr>
            <tr>
                <th>Position</th>
                <td>
                    <%= f.number_field(:position) %>
                </td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>
                     True <%= f.radio_button(:visible , 'true',:checked => true) %>
                     False <%= f.radio_button(:visible , 'false') %>
                </td>
            </tr>
            <tr>
                <td colspan=2>
                   <%= f.submit(:create) %>
                </td>
            </tr>
        </table>

    <%end%>

</div>